fun main(args: Array<String>){
print(vowelCount("aaadjdksddfdf ejddkjm,kzvmviopoiujdsjd"))
}

fun vowelCount(input: String) :String{
    var numA = 0
    var numE = 0
    var numI = 0
    var numO = 0
    var numU = 0
    var vowelSum = 0


    for (letter in input.toLowerCase()){
        if (letter == 'a'){
            numA++
            vowelSum++
        }
        else if(letter == 'e'){
            numE++
            vowelSum++
        }
        else if(letter == 'i'){
            numI++
            vowelSum++
        }
        else if(letter== 'o'){
            numO++
            vowelSum++
        }
        else if(letter== 'u'){
            numU++
            vowelSum++
        }

    }

    return "Total vowel count: $vowelSum\n A: $numA \n E: $numE " +
            "\n I: $numI \n O: $numO \n U: $numU";
}

